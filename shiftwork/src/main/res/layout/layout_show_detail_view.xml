<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/work_bg" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_content_sdv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_88000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="64dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />

        <TextView
            android:id="@+id/tv_next1_shift_work_sdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="8dp"
            android:text="明天早班"
            android:textColor="@color/color_FF888888"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_next2_shift_work_time_sdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="5dp"
            android:text="7:30"
            android:textColor="@color/color_FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_week_day_sdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="星期一"
            android:textColor="@color/color_FF888888"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_today_number_sdv"
            app:layout_constraintStart_toEndOf="@+id/tv_today_number_sdv" />

        <TextView
            android:id="@+id/tv_next1_shift_work_time_sdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="7:00"
            android:textColor="@color/color_FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/tv_next1_shift_work_sdv"
            app:layout_constraintStart_toEndOf="@+id/tv_next1_shift_work_sdv" />

        <TextView
            android:id="@+id/tv_next2_shift_work_sdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后天晚班"
            android:textColor="@color/color_FF888888"
            app:layout_constraintBottom_toBottomOf="@+id/tv_next2_shift_work_time_sdv"
            app:layout_constraintEnd_toStartOf="@+id/tv_next2_shift_work_time_sdv" />

        <TextView
            android:id="@+id/tv_today_number_sdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="29"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="100sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7" />

        <TextView
            android:id="@+id/tv_day_text_sdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sw_day"
            android:textColor="@color/color_FF888888"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_week_day_sdv"
            app:layout_constraintStart_toEndOf="@+id/tv_today_number_sdv" />

        <TextView
            android:id="@+id/tv_month_text_sdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/sw_month"
            android:textColor="@color/color_FF888888"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_today_number_sdv"
            app:layout_constraintEnd_toStartOf="@+id/tv_today_number_sdv" />

        <TextView
            android:id="@+id/tv_month_number_sdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="12"
            android:textColor="@color/color_FF888888"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_today_number_sdv"
            app:layout_constraintEnd_toStartOf="@+id/tv_month_text_sdv" />

        <TextView
            android:id="@+id/tv_today_shift_work_sdv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="今天早班"
            android:textColor="@color/color_FF888888"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_today_number_sdv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_today_number_sdv" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>